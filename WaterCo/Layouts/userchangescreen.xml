    <FrameLayout
        android:id="@+id/frmupdateuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout2" >
        
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal" >
            
            <EditText
                android:id="@+id/edtoldpass"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:background="@color/fontcolor"
                android:ems="10"
                android:hint="Enter Old Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" >
                
                </EditText>
            
            <EditText
                android:id="@+id/edtnewpass"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtoldpass"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:background="@color/fontcolor"
                android:ems="10"
                android:hint="Enter New Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            
            <EditText
                android:id="@+id/edtconnewpass"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtnewpass"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:background="@color/fontcolor"
                android:ems="10"
                android:hint="Confirm New Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true" >

                <Button
                    android:id="@+id/btnupdatecacel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/operation_btn_style"
                    android:textColor="@color/clrblue"
                    android:text="@string/btn_cancel" />

                <Button
                    android:id="@+id/btnupdateuser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/operation_btn_style"  
                    android:textColor="@color/clrblue"                  
                    android:text="@string/btn_update" />
            </LinearLayout>
            
            
            
        </RelativeLayout>
        
    </FrameLayout>
 
     
    
    <FrameLayout
        android:id="@+id/frmcontrolset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout2" >

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center_horizontal" >

          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:orientation="vertical" >
                    
              <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:orientation="vertical" >

                     <TextView
                         android:id="@+id/txtslidecount"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="System IP Address :"
                         android:textColor="@color/clrblue"
                         android:textAppearance="?android:attr/textAppearanceMedium" />

                     
                     <EditText
                  android:id="@+id/edtsystemip"
                  android:layout_width="230dp"
                  android:layout_height="wrap_content"
                  android:background="@color/fontcolor"
                  android:ems="10"
                  android:hint="System IP Address"
                  android:inputType="text"
                  android:padding="10dp"
                  android:textColor="@color/white"
                  android:textColorHint="@color/white" >
                
         </EditText>
             </LinearLayout>
             
            <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:orientation="vertical" >

                     <TextView
                         android:id="@+id/textView2"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="System Port Number:"
                         android:textColor="@color/clrblue"
                         android:textAppearance="?android:attr/textAppearanceMedium" />

                     
                    <EditText
                  android:id="@+id/edtsystemport"
                  android:layout_width="230dp"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/edtsystemip"
                  
                  
                  android:background="@color/fontcolor"
                  android:ems="10"
                  android:hint="System Port Address"
                  android:inputType="number"
                  android:padding="10dp"
                  android:textColor="@color/white"
                  android:textColorHint="@color/white" >
                
         </EditText>
                
         
             </LinearLayout>     
                
                
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:orientation="vertical" >

                 <TextView
                     android:id="@+id/textView3"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Client ID :"
                     android:textAppearance="?android:attr/textAppearanceMedium"
                     android:textColor="@color/clrblue" />
                 
                  <EditText
                      android:id="@+id/edtclientid"
                      android:layout_width="230dp"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      android:background="@color/fontcolor"
                      android:ems="10"
                      android:hint="Client ID"
                      android:inputType="text"
                      android:padding="10dp"
                      android:textColor="@color/white"
                      android:textColorHint="@color/white" >
                
         </EditText>
                 
                 
                 </LinearLayout>
                
             
                  
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:orientation="vertical" >
                   
                  </LinearLayout>
             
                
            </LinearLayout>
            
          
          
          <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true" >

                <Button
                    android:id="@+id/btnsettingcacel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/operation_btn_style"
                    android:textColor="@color/clrblue"
                    android:text="@string/btn_cancel" />

                <Button
                    android:id="@+id/btnsettingupdate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/operation_btn_style"
                    android:textColor="@color/clrblue"
                    android:text="@string/btn_update" />
            </LinearLayout>
          
          
          
             
            </RelativeLayout>
        
        </FrameLayout>
    
</RelativeLayout>