    <LinearLayout
        android:id="@+id/lineraddtimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnaddtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:textColor="@color/clrblue"
           android:textStyle="bold"
            android:background="@drawable/operation_btn_style"
            android:text="Press to Add new Timer" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:gravity="center"
        android:background="@drawable/squre_button_on"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Timer Screen"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:textColor="@color/clrblue" />

    </LinearLayout>

    <ListView
        android:id="@+id/timerlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lineraddtimer"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linertitle"
        android:divider="@color/white"
        android:dividerHeight="2dp" 
        >

    </ListView>
    
</RelativeLayout>