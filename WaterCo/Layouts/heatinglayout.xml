<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/squre_button_on"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Heating"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/midumblue"
                android:paddingLeft="5dp"
            	android:paddingRight="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Pool Set Temperature"
                    android:textColor="@color/clrblue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/btnpoolupcelsius"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="@drawable/operation_btn_style"
                             android:textColor="@color/clrblue"
                            android:textStyle="bold"                            
                            android:text="UP" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal" >
                            
                        <TextView
                            android:id="@+id/txtpoolcelsius"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="00"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/clrblue" />

                        <TextView
                            android:id="@+id/txtsampm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/celsius"
                            android:textColor="@color/clrblue"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                        
                        </LinearLayout>
                        

                        <Button
                            android:id="@+id/btnpooldowncelsius"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/operation_btn_style"
                             android:textColor="@color/clrblue"
                            android:textStyle="bold"                            
                            android:text="DOWN" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/midumblue"
                android:paddingLeft="5dp"
            	android:paddingRight="5dp"
            	android:paddingBottom="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Spa Set Temperature"
                    android:textColor="@color/clrblue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/btnspaupcelsius"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="@drawable/operation_btn_style"
                            android:textColor="@color/clrblue"
                            android:textStyle="bold"
                            android:text="UP" />

                        
                          <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal" >
                        
                        <TextView
                            android:id="@+id/txtspacelsius"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="00"
                            android:textColor="@color/clrblue"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                        
                        <TextView
                            android:id="@+id/txtspampm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/celsius"
                            android:textColor="@color/clrblue"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnspadowncelsius"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/operation_btn_style"
                            android:textColor="@color/clrblue"
                            android:textStyle="bold"
                            android:text="DOWN" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="10dp" >

            <CheckedTextView
                android:id="@+id/checksolar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/checklayout"
                android:checked="false"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/solardis"
                android:textColor="@color/gray"
                android:textSize="10dp" >
            </CheckedTextView>

            <CheckedTextView
                android:id="@+id/checkgas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/checklayout"
                android:layout_gravity="center"                
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/gasheatdis"
                android:textColor="@color/gray"
                android:textSize="10dp" >
            </CheckedTextView>

            <CheckedTextView
                android:id="@+id/checkheat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/checklayout"                
                android:padding="10dp"
                android:gravity="center"
                android:text="@string/heatpumpdis"
                android:textColor="@color/gray"
                android:textSize="10dp" >
            </CheckedTextView>
        </LinearLayout>

        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" 
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="10dp" >

            <Button
                android:id="@+id/btnsolardemand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/operation_btn_style"
                android:text="@string/solardemand"
                android:textColor="@color/clrblue" />

            <Button
                android:id="@+id/btngasdemand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/operation_btn_style"
                android:textColor="@color/clrblue"
                android:text="@string/gasheaterdemand"
                />

            <Button
                android:id="@+id/btnheatdemand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/operation_btn_style"
                android:textColor="@color/clrblue"
                android:text="@string/heatpumpdemand"
                />
        </LinearLayout>

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"  
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <Button
                android:id="@+id/btncancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/operation_btn_style"
                android:text="Cancel"
                android:textColor="@color/clrblue" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>